# Scheduler App Security Rules

# Deny access to Python files
<FilesMatch "\.(py|pyc|pyo|yaml|yml)$">
    Require all denied
</FilesMatch>

# Deny access to sensitive directories
<DirectoryMatch "^.*(python|__pycache__|\.git).*$">
    Require all denied
</DirectoryMatch>

# Allow PHP files
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>
